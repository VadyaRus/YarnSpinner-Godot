{
    "version": "2.0.0",
    "configurations": [

        // For these launch configurations to work, you need to setup a GODOT4
        // environment variable. On mac or linux, this can be done by adding
        // the following to your .zshrc, .bashrc, or .bash_profile file:
        // export GODOT4="/Applications/Godot.app/Contents/MacOS/Godot"
        {
            "name": "Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${config:godot.csharp.executablePath}",
            "args": [
                "--windowed",
                "--resolution", "1280x720"
            ],
            "cwd":"${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Launch (Select Scene)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${config:godot.csharp.executablePath}",
            "args": [
                "${command:godot.csharp.getLaunchScene}",
                "--windowed",
                "--resolution", "1280x720"
            ],
            "cwd":"${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ]
}